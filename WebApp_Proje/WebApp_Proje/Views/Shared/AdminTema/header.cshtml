@using Microsoft.AspNetCore.Http;
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>

        @if (@User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Sid)?.Value != null)
        {
            <li class="nav-item d-none d-sm-inline-block">
                <form class="form-inline" asp-controller="Giris" asp-action="Logout" method="get">
                    <button type="submit" class="nav-link btn btn-link text-dark">ÇIKIŞ</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-controller="Giris" action="Index" class="nav-link">GİRİŞ</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a asp-controller="KayitOl" action="Index" class="nav-link">KAYIT OL</a>
            </li>
        }


    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3">
        <div class="input-group input-group-sm">
            <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-navbar" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>

</nav>
<!-- /.navbar -->