@model IEnumerable<WebApp_Proje.Models.Kullanici>

@{
    ViewData["Baslik"] = "Index";
    Layout = "~/Views/Shared/AdminTema/sablon.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eposta)
            </th>
